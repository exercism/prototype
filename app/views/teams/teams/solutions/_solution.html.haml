=link_to teams_team_solution_path(@team, solution), class: 'solution' do
  .icons
    .exercise
      =graphical_image solution.exercise.turquoise_icon_url
    =graphical_image solution.exercise.track.hex_turquoise_icon_url, class: 'track'
    .joiner
      =image solution.user.avatar_url, "Avatar of #{solution.user.handle}", class: 'person'

  -difficulty_word = exercise_difficulty_word(solution.exercise)
  .details
    .title
      .handle= solution.user.handle
      solution to
      .exercise #{solution.exercise.title}
    .extra
      .language #{solution.exercise.track.title}
      .divider &nbsp;
      .iteration Iteration ##{solution.iterations.count}
      .divider &nbsp;
      .submitted-at Submitted #{time_ago_in_words(solution.iterations.last.created_at)} ago
    .status
      -if solution.needs_feedback?
        %i.fa.fa-comments-o
        View and Give Feedback

