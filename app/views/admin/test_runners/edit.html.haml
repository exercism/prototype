#admin-edit-test-runner
  =breadcrumb_nav do
    %li= link_to "Admin", admin_dashboard_path
    %li= link_to "Test runners", admin_test_runners_path
    %li= link_to @test_runner.language_slug, admin_test_runner_path(@test_runner)

  .lo-container
    %h1 Edit Test Runner: #{@test_runner.language_slug}
    =form_with model: @test_runner, url: admin_test_runner_path(@test_runner), data: {remote: false} do |f|
      .field
        =f.label :timeout_ms
        =f.text_field :timeout_ms
      .field
        =f.label :num_processors
        =f.text_field :num_processors

      =f.button "Update test runner", class: 'pure-button'

