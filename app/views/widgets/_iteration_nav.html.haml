.widget-iterations-nav
  .title
    Iteration
    %strong #{current_idx}
    of #{iteration_ids.size}
  .iterations
    -idx = 1 # 1-based index
    -iteration_ids.each.with_index do |iteration_id|
      -num_iteration_comments = num_comments[iteration_id].to_i

      -if current_idx == idx
        .current
          .idx= idx
          -if num_iteration_comments > 0
            .num-comments
              .num= num_iteration_comments
      -else
        =link_to iteration_path(url_path, url_parts + [iteration_idx: idx]) do
          .idx= idx
          -if num_iteration_comments > 0
            .num-comments
              .num= num_iteration_comments

      -idx += 1
