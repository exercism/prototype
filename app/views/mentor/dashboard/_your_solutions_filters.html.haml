=form_tag your_solutions_mentor_dashboard_path, method: :get, remote: true do
  .widget-filter.status
    .title Status:
    = select_tag :your_status,
      options_for_select(OptionsHelper.format_options(status_options), status)
  .widget-filter.track_id
    .title Track:
    = select_tag :your_track_id,
      options_for_select(OptionsHelper.format_options(track_id_options), track_id),
      include_blank: true
  .widget-filter.exercise_id
    .title Exercise:
    = select_tag :your_exercise_id,
      options_for_select(OptionsHelper.format_options(exercise_id_options), exercise_id),
      include_blank: true
