-if @your_solutions.size > 0
  $('.your-solutions').show().html("#{j render "your_solutions", your_solutions: @your_solutions, user_tracks: @user_tracks}")
  $('.no-your-solutions').hide()
-else
  $('.your-solutions').hide()
  $('.no-your-solutions').show().html("You have no solutions in this category.")

- if @your_track_id && @your_exercise_id.blank?
  var select = $('#your_exercise_id')[0].selectize;
  updateOptions(select, #{@your_exercise_id_options.to_json.html_safe});

