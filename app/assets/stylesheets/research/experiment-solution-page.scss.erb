@import 'mixins';
@import 'variables';

$re-color-1: #000;
$re-color-2: #111111;
$re-color-2: #272727;
$re-color-3: #303030;
$re-color-4: #3D3D3D;
$re-color-5: #4B4B4B;

$re-bg-color: $re-color-1;
$re-toolbar-bg-color: $re-color-3; // Buttons are transparent
$re-toolbar-btn-selected-bg-color: #1F3D40;
$re-toolbar-btn-selected-border-color: $color-2;
$re-toolbar-btn-selected-color: #fff;
$re-toolbar-btn-unselected-color: #BABABA;
$re-toolbar-btn-unselected-border-color: #646464;
$re-tabs-bg-color: $re-color-5;
$re-tabs-border-color: #646464;
$re-instructions-header-bg-color: #2C3637;
$re-instructions-header-border-color: $re-color-5;
$re-instructions-bg-color: $re-color-3;
$re-text-color: #F2F2F2;
$re-text-highlight-color: #fff;
$re-bottom-bar-bg-colour: $re-instructions-bg-color;
$re-bottom-bar-colour: #ddd;
$re-editor-bg-color:$re-color-2;
$re-scrollbar-background: $re-color-5;
$re-scrollbar-color: $re-color-1;
$re-inline-code-bg-color: $re-color-1;
$re-inline-code-border-color: $re-color-2;
$re-test-run-header-border-color: $re-color-5;

body.namespace-research {
    &.prism-dark  {
        $re-background-l1: red;
        $re-border-color-l1:yellow;

        <%= File.read(File.dirname(__FILE__) + "/experiment-solution-page.theme") %>
    }

    &:not(.prism-dark)  {
        $re-foreground-color:#222;
        $re-text-color:#2a2a2a;
        $re-background-l1: #fff;
        $re-background-l2: #fafafa;
        $re-background-l3: #eaeaea;
        $re-scrollbar-color: #ccc;
        $re-border-color-l1:#ddd;
        $re-border-color-l2:#ccc;
        $re-border-color-l3:#fff;

        <%= File.read(File.dirname(__FILE__) + "/experiment-solution-page.theme") %>
    }

    #experiment-solution-page+footer {
        display: none;
    }

    header {
        display:none;
    }

    .experiment-solution {
        .top-panel {
            padding:10px 10px;
            border-bottom:4px solid;
            display:flex;
            justify-content: space-between;
            .back-btn {
                i {
                    margin-right:5px;
                    @include font-size(16, 26);
                    margin-right:10px;
                }
            }
            h1 {
                @include font-size(18, 26);
                font-weight:$fw-semibold;
                flex-grow:1;
            }

            .toolbar {
                display:flex;
                .toolbar-item {
                    height:26px;
                    &, * {
                        @include font-size(13, 24);
                    }
                }

                .toolbar-multiselect-item {
                    display:flex;
                    margin-right:10px;
                    .label {
                        padding:0 10px;
                        display:block;
                        @include font-size(13, 24);
                    }
                    button {
                        @include font-size(13, 24);
                        display:block;
                        padding:0 10px;
                        border-radius:0;
                        z-index:0;
                        &:nth-child(n+1) {
                          margin-left:-1px;
                        }
                        &[selected] {
                            z-index:1;
                        }
                    }
                }
                .toolbar-shortcuts-btn {
                    padding:0 10px;
                    i {
                        margin-right:5px;
                    }
                }
            }
        }
        .panels {
            height: calc(100vh - 50px);
            display:flex;

            @include width-small() {
                height: calc(100vh - 50px);
            }
        }

        &.status-pending {
            .info-panel {
                .tabs-and-panes {
                    .pane-2 { border:2px solid orange !important; }
                    .tab-1:after { background:orange !important; }

                    &.selected-1 {
                        .tab { border-color:orange !important; }
                        .tab-2 {
                            background:rgba(orange, 0.1) !important;
                        }
                    }
                    &.selected-2 {
                        .tab { border-color:orange !important; }
                        .tab-2 {
                            background:rgba(orange, 0.1) !important;
                        }
                    }
                }
            }
        }

        &.status-pass {
            .info-panel {
                .tabs-and-panes {
                    .pane-2 { border:2px solid green !important; }
                    .tab-1:after { background:green !important; }

                    &.selected-1 {
                        .tab-2 {
                            border-color:rgba(green, 0.5) !important;
                            background:rgba(green, 0.1) !important;
                        }
                    }
                    &.selected-2 {
                        .tab-2 { border-color:green !important; }
                    }
                }
            }
        }

        &.status-fail {
            .info-panel {
                .tabs-and-panes {
                    .pane-2 { border:2px solid red !important; }
                    .tab-1:after { background:red !important; }

                    &.selected-1 {
                        .tab-2 {
                            border-color:rgba(red, 0.5) !important;
                            background:rgba(red, 0.1) !important;
                        }
                    }
                    &.selected-2 {
                        .tab-2 { border-color:red !important; }
                    }
                }
            }
        }

        .test-area {
            &.good {
                border:2px solid green;
            }
            &.bad {
            }
            &.pending {
                border:2px solid orange;
            }
        }

        .environment {
            display: flex;
            height: calc(100% - 85px); // - .header
            padding-bottom:15px
        }
    }

    .coding-panel {
        display: flex;
        flex-direction: column;
        min-width:400px;
        height: 100%;

        .bottom-toolbar {
            display:flex;
            justify-content: space-between;
            align-items:center;
            padding:10px;

            .revert-btn {
                @include font-size(15, 34);
                padding:0 20px;
                text-decoration:underline;
                font-weight:$fw-regular;
                text-decoration:none;
            }
            .editor-status {
                text-align:right;
                margin-right:15px;
                flex-grow:1;
            }
            .submit-code-btn {
                background-color: $color-2;
                color: #fff;
                padding:0 20px;
                @include font-size(15, 34);
                align-self: flex-end;
                i {
                    @include font-size(21, 29);
                    margin-right:5px;
                    vertical-align:middle;
                }
            }
        }
    }

    .gutter {
        cursor:col-resize;
        flex-shrink: 0;
    }

    .info-panel {
        height: 100%;
        min-width:400px;

        .tabs-and-panes {
            display:flex;
            height: 100%;

            .tabs {
                margin:0;
                padding:0;
                border:none;
                z-index:1;

                .tab {
                    border:none;
                    display:block;
                    padding:0;
                    margin:0 0 0px 0;
                    text-align:center;
                    width:30px;
                    height: 45px;
                    line-height: 45px;

                    position: relative;

                    /*&:after {
                        content: " ";
                        width: 2px;
                        height: 42px;
                        left: 0px;
                        top: -2px;
                        position: absolute;
                        z-index: 2;
                    }*/
                }
            }

            .panes {
                max-width: calc(100% - 20px);
                flex-grow: 1;
                .pane {
                    @include font-size(15, 20);

                    overflow: auto;
                    height: 100%;

                }
            }
        }

        .instructions {
            &>* {
                margin-left:30px;
                margin-right:30px;
            }
            h2 {
                @include font-size(16, 16);
                font-weight: $fw-semibold;
                margin:30px 0 10px 0;
                padding:10px 30px;

                &:first-child {
                    margin-top:0;
                    border-top:0;
                }
            }

            p, li {
                @include font-size(15, 21);
                margin-bottom: 10px;

                code {
                    @include code-font;
                    @include font-size(14, 20);
                    padding:2px 2px;
                }
            }
            table {
                width:100%;
                margin-bottom:20px;
                td, th {
                    text-align:left;
                    padding: 5px;
                }
                th {
                }
            }
            pre {
                margin-bottom: 10px;

                * {
                    @include code-font;
                    @include font-size(14, 20);
                }
            }
        }
        .pane-2 {
            padding:20px;
        }
    }

    @keyframes focus {
        0% {
            background-color: yellow;
        }
        100% {
            background-color: transparent;
        }
    }

    .test-result-focus {
        animation: focus 2s;
    }

    .test-run {
        .run-status {
            padding-bottom:3px;
            margin-bottom:10px;
        }
        .submit-exercise-section {
            margin-top:10px;
            h3 {
                @include font-size(16, 22);
                font-weight:$fw-semibold;
                font-weight: 600;
                margin-bottom: 5px;
            }
            p {
                margin-bottom:10px;
                max-width: 400px;
            }
            .submit-exercise-button {
                background: $color-2;
                @include font-size(15, 40);
                padding: 0 20px;
            }
        }
        .test-run-result {
            margin-bottom:10px;
            .header {
                display:flex;
                padding:0px;
                h3 {
                    flex-grow:1;
                    padding-top:4px;
                    @include font-size(14, 17);
                    strong {
                        color:red;
                        font-weight:$fw-semibold;
                    }
                }
                .closed-icon,
                .opened-icon {
                    text-align:center;
                    font-size: 10px;
                    line-height: 24px;
                    height: 24px;
                    width: 24px;
                    flex-shrink:0;
                    margin-right:5px;
                    cursor: pointer;
                    border-radius: 2px;
                }
            }
            .info {
                padding:0 10px 10px 10px;

                .part {
                    padding-left:20px;
                    padding-top:15px;
                    position:relative;

                    i {
                        position:absolute;
                        border-radius: 100%;
                        padding: 0;
                        left: -11px;
                        top: 20px;
                        height: 22px;
                        width: 22px;
                        @include font-size(9, 20);
                        text-align: center;
                    }

                    h4, pre {
                        padding:10px;
                    }
                    h4 {
                        font-weight:$fw-semibold;
                    }
                    pre {
                        @include font-size(14, 20);
                        margin:0;
                    }
                }
            }
            &.closed {
                .header {
                    .opened-icon { display:none; }
                    .closed-icon { display:inline-block; }
                }
                .info { display: none; }
            }
            &.open {
                .header {
                    .opened-icon { display:inline-block; }
                    .closed-icon { display:none; }
                }
                .info { display: block; }
            }
            &.fail {
                .header h3 strong { color:red; }
            }
            &.pass {
                .header h3 strong { color:green; }
            }
        }
    }

    .passed-test {
        color: green;
    }
}
