@import 'mixins';
@import 'variables';

$re-red: #D0021B;
$re-orange: #F5A623;
$re-green: #009C59;

body.namespace-research {
    &.prism-dark  {
        $re-bg-color: #000;
        $re-toolbar-bg-color: #303030;
        $re-toolbar-btn-selected-bg-color: #1F3D40;
        $re-toolbar-btn-selected-border-color: $color-2;
        $re-toolbar-btn-selected-color: #fff;
        $re-toolbar-btn-unselected-color: #BABABA;
        $re-toolbar-btn-unselected-border-color: #707070;
        $re-tabs-bg-color: #3c3d3c;
        $re-tabs-border-color: #646464;
        $re-tabs-unselected-color: #aaa;
        $re-tabs-selected-color: #fff;
        $re-instructions-header-bg-color: #2D4C50;
        $re-instructions-bg-color: #2f302f;
        $re-text-color: #F2F2F2;
        $re-text-highlight-color: #fff;
        $re-bottom-bar-bg-colour: $re-instructions-bg-color;
        $re-bottom-bar-colour: #ddd;
        $re-bottom-bar-button-bg-colour:$re-instructions-bg-color;
        $re-bottom-bar-button-border-colour:$re-toolbar-btn-unselected-border-color;
        $re-editor-bg-color:#272727;
        $re-scrollbar-color: #6D6D6D;
        $re-inline-code-bg-color: #111;
        $re-inline-code-border-color: #272727;
        $re-test-run-header-border-color: #4B4B4B;

        <%= File.read(File.dirname(__FILE__) + "/experiment-solution-page.theme") %>
    }

    &:not(.prism-dark)  {
        $re-bg-color: #fff;
        $re-toolbar-bg-color: #EFEFEF;
        $re-toolbar-btn-selected-bg-color: #fff;
        $re-toolbar-btn-selected-border-color: #9E9E9E;
        $re-toolbar-btn-selected-color: #000;
        $re-toolbar-btn-unselected-color: #454545;
        $re-toolbar-btn-unselected-border-color: #C6C6C6;
        $re-tabs-bg-color: #C3C2C3;
        $re-tabs-border-color: #9B9B9B;
        $re-tabs-unselected-color: #999;
        $re-tabs-selected-color: #333;
        $re-instructions-header-bg-color: #D2B3AF;
        $re-instructions-bg-color: #f0f0f0;
        $re-text-color: #333;
        $re-text-highlight-color: #000;
        $re-bottom-bar-bg-colour: $re-instructions-bg-color;
        $re-bottom-bar-colour: #222222;
        $re-bottom-bar-button-bg-colour:#fff;
        $re-bottom-bar-button-border-colour:#bbb;
        $re-editor-bg-color:#D8D8D8;
        $re-scrollbar-color: #929292;
        $re-inline-code-bg-color: #eeeeee;
        $re-inline-code-border-color: #D8D8D8;
        $re-test-run-header-border-color: #B4B4B4;

        <%= File.read(File.dirname(__FILE__) + "/experiment-solution-page.theme") %>
    }
}
body.namespace-research.controller-experiment_solutions.action-show {
    footer {
        display: none;
    }
    header {
        display:none;
    }

    .experiment-solution {
        .top-panel {
            padding:10px 10px;
            border-bottom:4px solid;
            display:flex;
            justify-content: space-between;
            .back-btn {
                i {
                    margin-right:5px;
                    @include font-size(16, 26);
                    margin-right:10px;
                }
            }
            h1 {
                @include font-size(18, 26);
                font-weight:$fw-semibold;
                flex-grow:1;
            }

            .toolbar {
                display:flex;
                .toolbar-item {
                    height:26px;
                    margin-left:20px;
                    &, * {
                        @include font-size(13, 24);
                    }
                }

                .toolbar-multiselect-item {
                    display:flex;
                    .label {
                        display:block;
                        @include font-size(13, 26);
                        font-weight:$fw-semibold;
                        margin:0 6px 0 0;
                    }
                    button {
                        @include font-size(13, 24);
                        display:block;
                        padding:0 10px;
                        border-radius:0;
                        z-index:0;
                        &:first-of-type {
                            border-radius:4px 0 0 4px;
                        }
                        &:last-child {
                            border-radius:0 4px 4px 0;
                        }
                        &:nth-child(n+1) {
                          margin-left:-1px;
                        }
                        &[selected] {
                            z-index:1;
                        }
                    }
                }
                .toolbar-shortcuts-btn {
                    padding:0 10px;
                    border-radius:4px;
                    i {
                        margin-right:5px;
                    }
                }
            }
        }
        .panels {
            height: calc(100vh - 50px);
            display:flex;

            @include width-small() {
                height: calc(100vh - 50px);
            }
        }

        &.status-pending {
            .info-panel {
                .tabs-and-panes {
                    .run-status { background:$re-orange !important; color:#fff; }
                    .pane-2 { border-left:1px solid $re-orange !important; }
                    .tab { border-color:$re-orange !important; }
                    .tab-2 { background:rgba($re-orange, 0.1) !important; }

                }
            }
        }

        &.status-pass {
            .info-panel {
                .tabs-and-panes {
                    .run-status { background:$re-green !important; color:#fff; }
                    .pane-2 { border-left:1px solid $re-green !important; }
                    .tab { border-color:$re-green !important; }
                    .tab-2 { background:rgba($re-green, 0.2) !important; }
                }
            }
        }

        &.status-fail {
            .info-panel {
                .tabs-and-panes {
                    .run-status { background:$re-red !important; color:#fff; }
                    .pane-2 { border-left:1px solid $re-red !important; }
                    .tab { border-color:$re-red !important; }
                    .tab-2 { background:rgba($re-red, 0.1) !important; }
                }
            }
        }

        .test-area {
            &.good {
                border:2px solid $re-green;
            }
            &.bad {
            }
            &.pending {
                border:2px solid $re-orange;
            }
        }

        .environment {
            display: flex;
            height: calc(100% - 85px); // - .header
            padding-bottom:15px
        }
    }

    .coding-panel {
        display: flex;
        flex-direction: column;
        min-width:400px;
        height: 100%;
        pointer-events: all !important;

        .bottom-toolbar {
            display:flex;
            justify-content: space-between;
            align-items:center;
            padding:10px;

            .revert-btn {
                border-radius:5px;
                @include font-size(15, 28);
                padding:0 10px;
                text-decoration:underline;
                font-weight:$fw-regular;
                text-decoration:none;
            }
            .editor-status {
                text-align:right;
                margin-right:15px;
                flex-grow:1;
            }
            .submit-code-btn {
                background-color: $color-2;
                color: #fff;
                padding:0 20px;
                @include font-size(15, 34);
                align-self: flex-end;
                border-radius:5px;
                i {
                    @include font-size(21, 29);
                    margin-right:5px;
                    vertical-align:middle;
                }
            }
        }
    }

    .gutter {
        cursor: ew-resize;
        flex-shrink: 0;
        width:5px;
    }

    .info-panel {
        height: 100%;
        min-width:400px;
        pointer-events: all !important;

        .tabs-and-panes {
            display:flex;
            height: 100%;

            .tabs {
                margin:0;
                padding:0;
                border:none;
                z-index:1;

                .tab {
                    border:none;
                    display:block;
                    padding:0;
                    margin:0 0 0px 0;
                    text-align:center;
                    width:30px;
                    height: 45px;
                    line-height: 45px;

                    position: relative;

                    /*&:after {
                        content: " ";
                        width: 2px;
                        height: 42px;
                        left: 0px;
                        top: -2px;
                        position: absolute;
                        z-index: 2;
                    }*/
                }
            }

            .panes {
                max-width: calc(100% - 26px);
                flex-grow: 1;
                .pane {
                    @include font-size(15, 20);

                    overflow: auto;
                    height: 100%;

                }
                .pane-2 {
                    margin-left: -1px;
                    z-index: 1;
                    position: relative;
                }
            }

            code, code * {
                @include code-font;
                @include font-size(14, 20);
            }
            pre {
                border-radius:0;
            }
        }

        .instructions {
            &>* {
                margin-left:20px;
                margin-right:20px;
            }
            h2 {
                @include font-size(16, 16);
                font-weight: $fw-semibold;
                margin:30px 0 10px 0;
                padding:10px 20px;

                &:first-child {
                    margin-top:0;
                    border-top:0;
                }
            }
            h3 {
                font-weight: 600;
                font-size: 18px;
                line-height: 20px;
                margin-top: 20px;
                margin-bottom: 5px;
            }
            p, li {
                @include font-size(15, 21);
                margin-bottom: 10px;

                code {
                    @include code-font;
                    @include font-size(14, 20);
                    padding:2px 2px;
                }
            }
            table {
                width:100%;
                margin-bottom:20px;
                td, th {
                    text-align:left;
                    padding: 5px;
                }
                th {
                }
            }
            pre {
                margin-bottom: 10px;

                * {
                    @include code-font;
                    @include font-size(14, 20);
                }
            }
        }
    }

    @keyframes focus {
        0% {
            background-color: yellow;
        }
        100% {
            background-color: transparent;
        }
    }

    .test-result-focus {
        animation: focus 2s;
    }

    .test-run {
        .run-status {
            @include font-size(15, 15);
            font-weight: $fw-semibold;
            margin:0 0 10px 0;
            padding:10px 20px;
            text-align:center;
        }
        .test-run-result {
            padding:10px 20px;
        }
        .test-run-error {
            padding:10px 20px;
            pre {
                padding:10px;
            }
        }
        .submit-exercise-section {
            padding:0 20px;
            h3 {
                @include font-size(16, 22);
                font-weight:$fw-semibold;
                font-weight: 600;
                margin-bottom: 5px;
            }
            p {
                margin-bottom:10px;
                max-width: 400px;
            }
            .submit-exercise-button {
                background: $color-2;
                @include font-size(15, 40);
                padding: 0 20px;
            }
        }
        .test-run-result {
            margin-bottom:10px;
            .header {
                display:flex;
                padding:0px;
                h3 {
                    flex-grow:1;
                    @include font-size(15, 23);
                    strong {
                        color:$re-red;
                        font-weight:$fw-semibold;
                    }
                }
                .closed-icon,
                .opened-icon {
                    text-align:center;
                    font-size: 10px;
                    line-height: 22px;
                    height: 24px;
                    width: 24px;
                    flex-shrink:0;
                    margin-right:6px;
                    cursor: pointer;
                    border-radius: 2px;
                }
            }
            .info {
                padding:0 10px 10px 10px;

                .part {
                    padding-left:20px;
                    padding-top:15px;
                    position:relative;

                    i {
                        position:absolute;
                        border-radius: 100%;
                        padding: 0;
                        left: -11px;
                        top: 20px;
                        height: 22px;
                        width: 22px;
                        @include font-size(9, 19.5);
                        text-align: center;
                    }

                    h4, pre {
                        padding:10px;
                    }
                    h4 {
                        font-weight:$fw-semibold;
                        @include font-size(15, 15);
                    }
                    pre {
                        margin:0;
                    }
                }
            }
            &.closed {
                .header {
                    .opened-icon { display:none; }
                    .closed-icon { display:inline-block; }
                }
                .info { display: none; }
            }
            &.open {
                .header {
                    .opened-icon { display:inline-block; }
                    .closed-icon { display:none; }
                }
                .info { display: block; }
            }
            &.fail {
                .header h3 strong { color:$re-red; }
            }
            &.pass {
                .header h3 strong { color:$re-green; }
            }
        }
    }

    .passed-test {
        color: $re-green;
    }
}
